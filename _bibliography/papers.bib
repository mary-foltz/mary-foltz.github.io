	urldate = {2023-03-10},
	journal = {Land},
	preview = {overton_2023.png},
	author = {Olivia Celeste Overton, Leif Hans Olson, Sreemala Das Majumder, Hani Shwiyyat, Mary Elizabeth Foltz, and Robert William Nairn},
	month = jan,
	year = {2023}

}

