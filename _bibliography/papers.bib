	journal = {Science of The Total Environment},
	author = {Foltz, Mary E. and Kent, Angela D. and Koloutsou-Vakakis, Sotiria and Zilles, Julie L.},
	month = apr,
	year = {2021},
	pages = {144295},
	file = {Foltz et al. - 2021 - Influence of rye cover cropping on denitrification.pdf:C\:\\Users\\mafoltz\\Zotero\\storage\\AMXU7JQG\\Foltz et al. - 2021 - Influence of rye cover cropping on denitrification.pdf:application/pdf},
}

